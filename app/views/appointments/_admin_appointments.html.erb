<b style="float:right"><%= link_to "Make New Appointment" , new_appointment_path, :class=>"alert alert-info" %></b><br><br><br>
<style>
 #container {height:500px;width:auto;}
 #left{padding:10px;float:left; width:45%;}
 #right{padding:10px;float:right; width:45%;}
 h5{color:green}
</style>
<div id ="container">
<div id ="left">
<div class="alert alert-success"><strong>List of doctors</strong><br><br>
<table class="table table-condensed">
<thead>
   <tr>
      <th>Tab User</th>
      <th>Assigned Doctor</th>
      <th>Status</th>
   </tr>
</thead>

<tbody>
<% appointments.each do |appointment| %>
   <% if appointment.doctor_id %>
      <tr>
         <td><%= appointment.tab_user_name %></td>
         <td><%= appointment.doctor_name %></td>
         <td>
         <% if appointment.status == 'Pending' %>
          <b class="label label-danger">Pending </b>
           <% else %>
          <b class="label label-success"> Completed </b>
         <% end %>
         </td>
         <td><b><%= link_to "view" , appointment_path(appointment)%></b></td>
      </tr>
   <% end %>
<% end %>
</tbody>
</table>
</div>
</div>

<div id ="right">
<div class="alert alert-danger"><strong>List of medical stores </strong><br><br>
<table class="table table-condensed">
	<thead>
		<tr>
	   <th>Tab User</th>
      <th>Assigned Medical Shop</th>
      <th>Status</th>
		</tr>
	</thead>

	<tbody>
		<% appointments.each do |appointment| %>
		<% if appointment.medical_shop_id %>
		 <tr>
        <td><%= appointment.tab_user_name %></td>
        <td><%= appointment.medical_shop_name %></td>
        <td><% if appointment.status == 'Pending' %>
          <b class="label label-danger">Pending </b>
           <% else %>
          <b class="label label-success"> Completed </b>
         <% end %>
        </td>
        <td><b><%= link_to "View", appointment_path(appointment)%></b></td>
      </tr>
		<% end %>
	 <% end %>
	</tbody>
</table>
</div>
</div>
</div>
</div>
